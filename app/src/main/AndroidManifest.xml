<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".rxjava.RxJavaActivity"/>
        <activity android:name=".rxjava_retrofit.RxJavaRetrofitActivity">

        </activity>
        <activity android:name=".service_broadcast.BroadcastServiceActivity">

        </activity>
        <activity android:name=".service_messenger.MessengerServiceActivity" />
        <activity android:name=".service_communication.ServiceActivity" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service_messenger.MessengerService"
            android:exported="true" />
        <service android:name=".service_communication.LocalService" />
        <service android:name=".service_broadcast.BroadcastService" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>